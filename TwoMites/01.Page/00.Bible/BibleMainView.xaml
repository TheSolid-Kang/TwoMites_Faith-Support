<UserControl x:Class="TwoMites._01.Page._00.Bible.BibleMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwoMites._01.Page._00.Bible"
             xmlns:side_commander="clr-namespace:TwoMites._02.CCommon"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200"
             Loaded="Load" Unloaded="UnLoad"
             >
  <Grid Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid Background="White" Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="7">
    </Grid>

    <Grid Background="#FFDCDCE0" Grid.Row="1" Grid.Column="0" Grid.RowSpan="4">
      <!--<StackPanel VerticalAlignment="Center" Orientation="Vertical" Height="auto">
      </StackPanel>-->

      <!--
        <ScrollViewer   Width="auto" Height="auto" CanContentScroll="True">


          <TreeView ItemsSource="{Binding bind_list_old_testament_name}">
            <TreeView.ItemTemplate>
              <HierarchicalDataTemplate >
                <TreeViewItem Header="구약성경" IsExpanded="True">
                  <TreeViewItem.ItemTemplate>
                    <HierarchicalDataTemplate>
                      <TreeViewItem Header="{Binding bind_list_old_testament_name}"/>
                    </HierarchicalDataTemplate>
                  </TreeViewItem.ItemTemplate>
                </TreeViewItem>
              </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
          </TreeView>
        </ScrollViewer>
        <ScrollViewer   Width="auto" Height="auto"  CanContentScroll="True">
          <TreeView Height="auto">
            <TreeViewItem Header="신약성경" IsExpanded="True">
              <TreeViewItem Header="마태복음" />
              <TreeViewItem Header="마가복음" />
            </TreeViewItem>
          </TreeView>
        </ScrollViewer>
        -->

      <ListView Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="7" HorizontalAlignment="Center" Width="Auto" 
                  ItemsSource="{Binding bind_list_testament_name}"  
                  SelectedItem="{Binding focus_testament_item, Mode=TwoWay}"
                      VerticalContentAlignment="Stretch" >
        <ListView.View >
          <GridView >
            <GridViewColumn Header="성경" DisplayMemberBinding="{Binding bt_name, Mode=TwoWay}" Width="100" />
          </GridView>
        </ListView.View>
        <ListView.ItemContainerStyle >
          <Style TargetType="ListViewItem" />
        </ListView.ItemContainerStyle>
      </ListView>
    </Grid>
    <Grid Background="#FFDCDCE0" Grid.Row="5" Grid.Column="0" Grid.RowSpan="2">
      <side_commander:CSideCommander />
    </Grid>
    <Grid Background="#FFE4E4C7" Grid.Row="1" Grid.Column="1" Grid.RowSpan="6" Grid.ColumnSpan="6">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Grid Margin="10" Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="3">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListView Name="lv_bible" Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="7" HorizontalAlignment="Center" Width="Auto" 
                  ItemsSource="{Binding bind_list_dto_bible}" 
                  SelectedItem="{Binding focus_bible_item, Mode=TwoWay}" 
                      VerticalContentAlignment="Stretch" >
          <ListView.View >
            <GridView AllowsColumnReorder="True" >
              <GridViewColumn Header="장" DisplayMemberBinding="{Binding b_chapter, Mode=TwoWay}" Width="auto"/>
              <GridViewColumn Header="절" DisplayMemberBinding="{Binding b_verse, Mode=TwoWay}" Width="auto" />
              <GridViewColumn Header="구절" DisplayMemberBinding="{Binding b_descript, Mode=TwoWay}" Width="410" />
            </GridView>
          </ListView.View>
        </ListView>


      </Grid>
      <Grid Margin="10" Grid.Row="0" Grid.Column="4" Grid.RowSpan="3" Grid.ColumnSpan="3">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListView Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="7"  
                  Width="Auto"  ItemsSource="{Binding bind_list_dto_bible_summary}">
          <ListView.View >
            <GridView >
              <GridViewColumn Header="date" DisplayMemberBinding="{Binding bs_date, Mode=TwoWay}" />
              <GridViewColumn Header="summary" DisplayMemberBinding="{Binding bs_descript, Mode=TwoWay}" />
            </GridView>
          </ListView.View>
          <ListView.ItemContainerStyle >
            <Style TargetType="ListViewItem" />
          </ListView.ItemContainerStyle>
        </ListView>
        <TextBox Grid.Row="5" Grid.Column="0"  Grid.RowSpan="2" Grid.ColumnSpan="6"   
                 AcceptsReturn="True" Text="{Binding Path=bible_summary, Mode=TwoWay}" />
        <Button Command="{Binding insert_bible_summary}" Content="작성" Grid.Row="5" Grid.Column="7" Grid.RowSpan="2" />

      </Grid>
      
      <Grid Margin="10" Grid.Row="4" Grid.Column="4" Grid.RowSpan="3" Grid.ColumnSpan="3">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="7"   ItemsSource="{Binding bind_list_dto_bible_contemplation}">
          <ListView.View >
            <GridView >
              <GridViewColumn Header="date" DisplayMemberBinding="{Binding bc_date, Mode=TwoWay}" />
              <GridViewColumn Header="contemplation" DisplayMemberBinding="{Binding bc_descript, Mode=TwoWay}" />
            </GridView>
          </ListView.View>
          <ListView.ItemContainerStyle >
            <Style TargetType="ListViewItem" />
          </ListView.ItemContainerStyle>
        </ListView>
        <TextBox Grid.Row="5" Grid.Column="0"  Grid.RowSpan="2" Grid.ColumnSpan="6"   
                 AcceptsReturn="True" Text="{Binding Path=bible_contemplation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
        <Button Command="{Binding insert_bible_contemplation}" Content="작성" Grid.Row="5" Grid.Column="7" Grid.RowSpan="2" />
      </Grid>
    </Grid>
  </Grid>
</UserControl>
